.bg-img,
.bg-cover {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(20px);
}

.tabs {
  display: flex;
  font-size: 28rpx;
  justify-content: center;
  color: #aaa;
}

.tabs .active {
  color: #fff;
}

.tabs .divider {
  margin: 0 8rpx;
}

.music {
  color: #fff;
}

.music {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 40rpx 60rpx;
}

.music .album {
  flex: 1;
}

.album .image {
  width: 100%;
  border-radius: 12rpx;
}

.music .info .name {
  font-size: 48rpx;
}

.music .info .art {
  margin-top: 10rpx;
  font-size: 26rpx;
}

.music .lyric {
  text-align: center;
  margin: 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
}

.music .progress slider {
  margin: 0 0 6rpx 10rpx;
}

.music .progress .time {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.music .control {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.music .control .btn {
  width: 60rpx;
  height: 60rpx;
}

.control .btn.mode {
  width: 80rpx;
  height: 80rpx;
}

.control .btn.play {
  width: 100rpx;
  height: 100rpx;
}

/* ============= 歌词样式 */
.lyric-list {
  color: #aaa;
  font-size: 30rpx;
  text-align: center;
  height: 100%;
}

.lyric-list .item {
  height: 34px;
  line-height: 34px;
}